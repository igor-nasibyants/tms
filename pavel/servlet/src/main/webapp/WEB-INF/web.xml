<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>DayToday</display-name>

    <servlet>
        <servlet-name>MyDateServlet</servlet-name>
        <servlet-class>org.superpaulscompany.pavel.MyDateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyDateServlet</servlet-name>
        <url-pattern>/date</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentsServlet</servlet-name>
        <servlet-class>org.superpaulscompany.pavel.StudentsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentsServlet</servlet-name>
        <url-pattern>/students</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CountServlet</servlet-name>
        <servlet-class>org.superpaulscompany.pavel.CountServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CountServlet</servlet-name>
        <url-pattern>/count</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>org.superpaulscompany.pavel.filters.LogFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginToPartyServlet</servlet-name>
        <servlet-class>org.superpaulscompany.pavel.LoginToPartyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginToPartyServlet</servlet-name>
        <url-pattern>/party</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DayNumberInTheYearServlet</servlet-name>
        <servlet-class>org.superpaulscompany.pavel.DayNumberInTheYearServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DayNumberInTheYearServlet</servlet-name>
        <url-pattern>/year</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DayOfTheWeekServlet</servlet-name>
        <servlet-class>org.superpaulscompany.pavel.DayOfTheWeekServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DayOfTheWeekServlet</servlet-name>
        <url-pattern>/week</url-pattern>
    </servlet-mapping>

</web-app>